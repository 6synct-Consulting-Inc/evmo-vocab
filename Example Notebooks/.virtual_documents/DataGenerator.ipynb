def maintenance_data_generator(num_orders, site_headings, site_headings_list, dataset_period, seed_data):
    site_dict = {}

    site_A_headings = site_headings_list[0]
    site_B_headings = site_headings_list[0]
    site_C_headings = site_headings_list[0]
    
    cat_notation = {'BEV Haul Truck': "HT",
                    'BEV LHD': "LHD",
                    'BEV Light Truck': "LT",
                    'BEV Drill Rig': "DR"}

    # Dates for the work orders
    diff = dataset_period[1] - dataset_period[0]
    date_diff_list = [random.randrange(0, diff.days) for _ in range(num_orders)]
    date_diff_list.sort()
    
    for j in range(len(site_headings)):
        hdg = site_headings[j]
        vals_list = []
    
        for i in range(num_orders):
            
            # Work Order
            if(hdg in [heading[0] for heading in site_headings_list]):
                if(i == 0):
                    wo_num = random.randrange(10000,99999)
                else:
                    wo_num = vals_list[i-1] + 1
                    
                vals_list.append( wo_num )
    
            # Work Center
            elif(hdg in [heading[1] for heading in site_headings_list]):
                vals_list.append( random.choice(seed_data['Work Centre']) )
        
            # Priority
            elif(hdg in [heading[2] for heading in site_headings_list]):
                vals_list.append( random.choice(["Low", "Medium", "High"]) )
        
            # Category
            elif(hdg in [heading[3] for heading in site_headings_list]):
                vals_list.append( random.choice(seed_data['Category']) )

            # Equipment ID
            elif(hdg in [heading[4] for heading in site_headings_list]):
                cat_type = site_dict[site_headings[3]][i]
                equip_pre = cat_notation[cat_type]
                equip_num = str(random.randrange(1,5))
                
                vals_list.append( equip_pre + "_" + equip_num )
    
            # Description
            elif(hdg in [heading[5] for heading in site_headings_list]):
                work_ctr = site_dict[site_headings[1]][i]
                system = seed_data['Work Order'][work_ctr]['systems']
    
                # Corrective or preventative maintenance
                pm_v_cm = random.choice(["PM", "CM"])
    
                if(pm_v_cm == "PM"):
                    vals_list.append( "PM - " + work_ctr )
                else:
    
                    if(work_ctr == "Electrical"):
                        issues = seed_data['Work Order'][work_ctr]['issues']
                        vals_list.append( f"{random.choice(system)} {random.choice(issues)}" )
                    elif(work_ctr == "Mechanical"):
                        actions = seed_data['Work Order'][work_ctr]['actions']
                        vals_list.append( f"{random.choice(actions)} {random.choice(system)}" )
            
            # Actual Costs
            elif(hdg in [heading[6] for heading in site_headings_list]):
                pm_status = site_dict[site_headings[5]][i]
    
                if("PM" in pm_status):
                    vals_list.append( round(random.weibullvariate(2.0, 0.5) * 1000 + 50.0, 2) )
                else:
                    vals_list.append( round(random.weibullvariate(3.0, 0.5) * 1000 + 50.0, 2) )
            
            # Planned Costs
            elif(hdg in [heading[7] for heading in site_headings_list]):
                pm_status = site_dict[site_headings[5]][i]
                act_costs = site_dict[site_headings[6]][i]
                
                if("PM" in pm_status):
                    vals_list.append( round((random.random() + 0.5)*act_costs, 2) )
                else:
                    vals_list.append( 0.0 )
                
            # Created On
            elif(hdg in [heading[8] for heading in site_headings_list]):
                vals_list.append( dataset_period[0] + dt.timedelta(days=date_diff_list[i]) )
            
            # Owner
            elif(hdg in [heading[9] for heading in site_headings_list]):
                work_ctr = site_dict[site_headings[1]][i]
                technician = seed_data['Owner'][work_ctr]
                vals_list.append( f"{random.choice(technician)}" )
    
            else:
                vals_list = [None for _ in range(10)]
        
        site_dict[hdg] = vals_list
    
    return( pd.DataFrame(site_dict) )





